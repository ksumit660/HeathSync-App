{
  "expo": {
    "name": "HealthSync",
    "slug": "HealthSync",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "scheme": "healthsync",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.healthsync.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID/Touch ID to provide secure biometric authentication."
      }
    },
    "android": {
      "package": "com.healthsync.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a237e"
      },
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "newArchEnabled": true
  }
}